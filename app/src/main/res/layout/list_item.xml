<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        card_view:cardCornerRadius="3dp"
        android:layout_margin="3dp"
        android:background="#606060"
        android:id="@+id/cardview_item"
        android:onClick="ShowPopup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            >

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="40dp"
                android:layout_height="40dp">


                <ImageView
                    android:id="@+id/Profil_Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="#fff"
                >

                <TextView
                    android:id="@+id/nom_entrep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"

                    android:text="MEDECIN SANS FONTIERE"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/avisR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nom_entrep"
                    android:layout_marginTop="5dp"

                    android:layout_gravity="center"
                    android:text="@string/avis"
                    android:textColor="#000000"/>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/post1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:text="Poste: "
                    android:textStyle="bold"
                    android:textColor="#000000"/>


                <TextView
                    android:id="@+id/Poste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Name"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/post1"
                    android:textColor="#000"
                     />
</RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/dep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:text="Departement: "
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                    android:id="@+id/Departement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Name"
                        android:textStyle="italic"
                        android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/dep"
                    android:textColor="#000"
                     />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/datl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:text="Date Limite: "
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                <TextView
                    android:id="@+id/Date_Limite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Name"
                    android:layout_marginTop="2dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/datl"
                    android:textColor="#000"
                   />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/datp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:text="Publie le: "
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                <TextView
                    android:id="@+id/Date_Poste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="italic"
                    android:layout_toRightOf="@+id/datp"
                    android:textColor="#000"
                   />


                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/cardview_item"
        />




</RelativeLayout>




