<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/formBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundd" />





        <LinearLayout
            android:id="@+id/bb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/trans_whitee_rectangle"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="Ici vous trouverez quelques sites pouvant vous
aidez a preparer soigneusement votre cv"
                android:textColor="#fff"
                android:textSize="20sp" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="40dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

           <ImageView
               android:id="@+id/cvmaker"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:src="@drawable/site"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cvmaker"
                android:layout_marginLeft="15dp"
                android:layout_gravity="bottom"
                android:layout_below="@+id/cvmaker"

                android:textColor="#fff"
                android:textStyle="italic" />


    <ImageView
        android:id="@+id/moncvparfait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"

        android:src="@drawable/site"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="moncvparfait"

        android:layout_gravity="center"
        android:layout_below="@+id/cvmaker"
        android:layout_marginLeft="100dp"
        android:textColor="#fff"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/modele"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="200dp"

        android:src="@drawable/site"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="modeles-de-cv"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_below="@+id/cvmaker"
        android:layout_marginLeft="200dp"
        android:textColor="#fff"
        android:textStyle="italic" />


</RelativeLayout>

            <Button
                android:id="@+id/retour"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/register_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Retour"
                android:textColor="@color/white"
                android:textStyle="normal" />




        </LinearLayout>

    </RelativeLayout>


