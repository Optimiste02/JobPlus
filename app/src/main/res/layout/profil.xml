<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_photo_entrep"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cvvv"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="Ici vous trouverez quelques sites pouvant vous
aidez a preparer soigneusement votre cv"
                android:textColor="#fff"
                android:textSize="20sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/cvmaker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/site"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cvmaker"
                android:layout_marginLeft="15dp"
                android:layout_gravity="bottom"
                android:layout_below="@+id/cvmaker"

                android:textColor="#fff"
                android:textStyle="italic" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:gravity="center">
            <ImageView
                android:id="@+id/moncvparfait"
                android:layout_width="80dp"
                android:layout_height="80dp"


                android:src="@drawable/site"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="moncvparfait"

                android:layout_gravity="center"
                android:layout_below="@+id/moncvparfait"

                android:textColor="#fff"
                android:textStyle="italic" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/modele"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/site"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="modeles-de-cv"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_below="@+id/modele"
                android:textColor="#fff"
                android:textStyle="italic" />
            </RelativeLayout>
</LinearLayout>
        </LinearLayout>






    </RelativeLayout>



    </LinearLayout>

    </LinearLayout>


